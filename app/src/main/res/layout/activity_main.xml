<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cn.androiddemo.MainActivity">

    <Button
        android:text="中心"
        android:id="@+id/btn_center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="中上"
        android:layout_alignLeft="@id/btn_center"
        android:layout_above="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="左上"
        android:layout_toLeftOf="@id/btn_center"
        android:layout_above="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="右上"
        android:layout_toRightOf="@id/btn_center"
        android:layout_above="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="左边"
        android:layout_alignTop="@id/btn_center"
        android:layout_toLeftOf="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="左下"
        android:layout_below="@id/btn_center"
        android:layout_toLeftOf="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="右边"
        android:layout_alignTop="@id/btn_center"
        android:layout_toRightOf="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="中下"
        android:layout_alignLeft="@id/btn_center"
        android:layout_below="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="右下"
        android:layout_toRightOf="@id/btn_center"
        android:layout_below="@id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
